<UserControl x:Class="FlightSimulator.Views.AutoPilot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBox x:Name="scriptBox" Margin="50 10" Height="250" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="0"  FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,0,10,0">
                <Button.Background>
                    <LinearGradientBrush>
                        <GradientStop Offset="0" Color="LightSteelBlue" />
                        <GradientStop Offset="0.5" Color="WhiteSmoke" />
                        <GradientStop Offset="1" Color="LightSteelBlue" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Content="Clear" Grid.Column="1" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,184,0" >
                <Button.Background>
                    <LinearGradientBrush>
                        <GradientStop Offset="0" Color="LightSteelBlue" />
                        <GradientStop Offset="0.5" Color="WhiteSmoke" />
                        <GradientStop Offset="1" Color="LightSteelBlue" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
